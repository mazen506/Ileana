$("#forms-container").html("<%= j render "form", chart: @chart, products:@products %>");
$("#app-notifications").html("");
<% if @chart.errors.any? %>
    $("#app-notifications").append("<div class='alert alert-error'><h6>Please resolve the following errors:</h6><ul id='error-list'>");
    <% @chart.errors.full_messages.each do |msg| %>
                        $("#error-list").append("<li><%= msg %></li>");
    <% end %>
    $("#app-notifications").append("</ul></div>");
<% else %>
        <% flash.each do |key, value| %>
                $("#app-notifications").append("<div class='alert alert-<%= key %>'><%= value %></div>")
        <% end %>
<% end %>
$("html, body").animate({ scrollTop: 0 }, "fast");
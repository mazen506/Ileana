    <div class="app-wrapper">
      <div class="app-content">
        <main role="main">
          <%= render 'layouts/header' %>
          <div id='app-notifications'>
              <% flash.each do |key, value| %>
                  <div class="alert alert-<%= key %>"><%= value %></div>
